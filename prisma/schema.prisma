// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  id          String        @id @default(uuid())
  email       String        @unique
  Password    Password?
  boardRoles  BoardRole[]   // Relation to track user roles on boards
}

model Password {
  id        String   @id @default(uuid())
  salt      String
  hash      String
  Account   Account  @relation(fields: [accountId], references: [id], onDelete: Cascade)
  accountId String   @unique
}

model Board {
  id       String      @id @default(uuid())
  name     String
  cards    Card[]
  roles    BoardRole[] // Relation to track user roles on this board
  lastOpenedAt DateTime?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Card {
  id      String @id @default(uuid())
  text    String
  board   Board  @relation(fields: [boardId], references: [id])
  boardId String
}

model BoardRole {
  id       String   @id @default(uuid())
  role     String // owner, editor
  board    Board    @relation(fields: [boardId], references: [id])
  boardId  String
  account  Account  @relation(fields: [accountId], references: [id])
  accountId String

  @@unique([boardId, accountId]) // Ensure one role per user per board
}